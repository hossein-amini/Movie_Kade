<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        tools:context="com.aminiam.moviekade.fragment.MoreDataFragment">

        <LinearLayout
            android:id="@+id/lne1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="@dimen/more_date_icon_size"
                android:layout_height="@dimen/more_date_icon_size"
                app:srcCompat="@drawable/ic_clock" />

            <TextView
                android:id="@+id/txt1"
                style="@style/mor_detail_text"
                tools:text="1:45" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lne2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="@dimen/more_date_icon_size"
                android:layout_height="@dimen/more_date_icon_size"
                app:srcCompat="@drawable/ic_translate" />

            <TextView
                android:id="@+id/txt2"
                style="@style/mor_detail_text"
                tools:text="en"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lne3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="@dimen/more_date_icon_size"
                android:layout_height="@dimen/more_date_icon_size"
                app:srcCompat="@drawable/ic_block" />

            <TextView
                android:id="@+id/txt3"
                style="@style/mor_detail_text"
                tools:text="Adoult" />

        </LinearLayout>

    </LinearLayout>
</layout>