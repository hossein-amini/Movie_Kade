<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#273243"
    android:layout_height="@dimen/nav_header_height" >

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Kade \nwww.aminam.com"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:textColor="#a1a1a1"
        android:fontFamily="sans-serif"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="@dimen/nav_header_icon_dimen"
        android:layout_height="@dimen/nav_header_icon_dimen"
        android:layout_marginBottom="12dp"
        android:src="@drawable/icon"
        android:layout_above="@+id/txtInfo"
        android:layout_alignLeft="@+id/txtInfo"
        android:layout_alignStart="@+id/txtInfo"
        android:id="@+id/imageView" />

</RelativeLayout>